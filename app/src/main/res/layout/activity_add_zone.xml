<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg"
    tools:context=".AddZoneActivity"> <!-- It's good practice to add tools:context -->

    <!--
        CHANGE 1: Used app:title instead of android:title for MaterialToolbar.
        This is the correct attribute for setting the title on this component.
    -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="Add Silent Zone"
        android:background="?attr/colorPrimary"
        app:titleTextColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etZoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zone name (e.g. Library)"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Radius -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilRadius"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tilName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Radius in meters (e.g. 100)"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Map placeholder / picked coordinates -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mapPlaceholder"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilRadius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Map preview (placeholder)\nTap 'Pick Location' to use GPS"
            android:textColor="?attr/colorOnSurface"
            android:textAppearance="?attr/textAppearanceBody2"/>
    </androidx.cardview.widget.CardView>

    <!-- Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickLoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick Location"
        app:layout_constraintTop_toBottomOf="@id/mapPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSave"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Zone"
        app:layout_constraintTop_toBottomOf="@id/mapPlaceholder"
        app:layout_constraintStart_toEndOf="@id/btnPickLoc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
