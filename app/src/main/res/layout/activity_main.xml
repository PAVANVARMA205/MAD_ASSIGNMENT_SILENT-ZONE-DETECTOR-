<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="16dp">

    <!-- Top App bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:titleTextColor="@android:color/primary"
        app:titleCentered="true"
        android:text="Silent Zone Detector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Hero card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/heroCard"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/heroTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Protect quiet places automatically"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/heroIcon"
                />

            <TextView
                android:id="@+id/heroSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Set silent zones like library, lab or meeting rooms â€” phone will auto mute when you enter."
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/heroTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/heroIcon"/>

            <ImageView
                android:id="@+id/heroIcon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@android:drawable/ic_lock_silent_mode"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Quick actions -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddZone"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Add Zone"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="@android:color/white"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/heroCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnViewZones"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewZones"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Zones"
        app:layout_constraintTop_toBottomOf="@id/heroCard"
        app:layout_constraintStart_toEndOf="@id/btnAddZone"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"/>

    <!-- Footer hint -->
    <TextView
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tip: tap a saved zone to edit; long-press to delete"
        android:textSize="12sp"
        android:textColor="@color/textSecondary"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
